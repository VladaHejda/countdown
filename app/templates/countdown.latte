{layout layout.latte}

{block content}

<div class="outer">
	<div class="middle">

		<article id="countdown" n:if="!$finished">
			<span class="days number"></span> <span class="colon">:</span>
			<span class="hours number"></span> <span class="colon">:</span>
			<span class="minutes number"></span> <span class="colon">:</span>
			<span class="seconds number"></span>
		</article>

		{if $defaultPage}
			<article id="story" style="display: none;">
				<h1>Odpočetfacky.com</h1>
				<p><a class="btn btn-success" href="{$basePath}/create">Vytvořit</a></p>
			</article>

		{elseif $finished}
			<article id="story">
				<p>{$story}</p>
			</article>
		{/if}

	</div>
</div>
